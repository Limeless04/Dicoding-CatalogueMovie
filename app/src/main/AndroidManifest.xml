<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alvin.cataloguemovie">

    <uses-permission android:name="android.permission.INTERNET" />
    <permission android:name="com.alvin.cataloguemovie.READ_DATABASE" android:protectionLevel="normal"/>
    <permission android:name="com.alvin.cataloguemovie.WRITE_DATABASE" android:protectionLevel="normal"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_movie_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_movie_app"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.default_searchable"
                android:value=".SearchableActivity" />
        </activity>
        <activity
            android:name=".DetailMoviesActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".SearchableActivity"
            android:launchMode="singleTop"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".FavouriteActivity"
            android:theme="@style/NoActionBar">

        </activity>
        <provider
            android:authorities="com.alvin.cataloguemovie"
            android:name=".Provider.FavouriteProvider"
            android:exported="true"
            android:readPermission="com.alvin.cataloguemovie.READ_DATABASE"
            android:writePermission="com.alvin.cataloguemovie.WRITE_DATABASE" />

    </application>

</manifest>